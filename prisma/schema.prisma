generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum RATING {
  CHICKEN
  CHICKEN_CHICKEN
  CHICKEN_CHICKEN_CHICKEN
  CHICKEN_CHICKEN_CHICKEN_CHICKEN
  CHICKEN_CHICKEN_CHICKEN_CHICKEN_CHICKEN
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  username  String    @unique
  email     String    @unique
  password  String
  reviews   Review[]
  Comment   Comment[]
}

model Review {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  establishment String    
  address       String
  description   String?
  body          String
  rating        RATING?
  reviewedById  String
  reviewedBy    User      @relation(fields: [reviewedById], references: [id])
  public        Boolean
  Comment       Comment[]
}

model Comment {
  id                  String   @id @default(uuid())
  createdAt           DateTime @default(now())
  body                String
  commentedById       String
  commentedBy         User     @relation(fields: [commentedById], references: [id])
  commentedOnReviewId String
  commentedOnReview   Review   @relation(fields: [commentedOnReviewId], references: [id])
}
